<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_definicoes_username" />

    <EditText
        android:id="@+id/editTextFieldUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_definicoes_username"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_definicoes_email" />

    <EditText
        android:id="@+id/editTextFieldEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_definicoes_email"
        android:inputType="textEmailAddress" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_definicoes_nome" />

    <EditText
        android:id="@+id/editTextFieldNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_definicoes_nome"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_definicoes_telemovel" />

    <EditText
        android:id="@+id/editTextFieldTelemovel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_definicoes_telemovel"
        android:inputType="phone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_definicoes_rua" />

    <EditText
        android:id="@+id/editTextFieldRua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_definicoes_rua"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_definicoes_localidade" />

    <EditText
        android:id="@+id/editTextFieldLocalidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_definicoes_localidade"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_definicoes_codigo_postal" />

    <EditText
        android:id="@+id/editTextFieldCodPostal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_definicoes_codigo_postal"
        android:inputType="textPostalAddress" />

</LinearLayout>
