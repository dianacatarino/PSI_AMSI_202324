<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:layout_marginStart="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTipoReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_reserva_tipo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTipoReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCheckin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_reserva_checkin"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCheckin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_reserva_checkout"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewNumeroQuartos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_reserva_n_quartos"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNumeroQuartos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewNumeroClientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_reserva_n_clientes"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNumeroClientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_reserva_valor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewFornecedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_reserva_alojamento"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFornecedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnDetalhesReserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_reserva_detalhes"
        android:backgroundTint="@color/black"
        android:onClick="onDetalhesReservaClick" />

</LinearLayout>
