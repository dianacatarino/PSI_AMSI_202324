<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:layout_marginStart="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewFaturaId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_fatura_id"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFaturaId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTotalFatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_fatura_total_fatura"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotalFatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_fatura_reserva"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_fatura_data"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btnDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_fatura_detalhes"
            android:backgroundTint="@color/blue"
            android:onClick="onDetalhesFaturaClick" />

        <ImageButton
            android:id="@+id/imageButtonDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnDetalhes"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_action_download"
            android:backgroundTint="@color/white"/>
    </RelativeLayout>
</LinearLayout>