<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ListaCarrinhoFragment">

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lvcarrinho"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

            <Button
                android:id="@+id/btnFinalizarCarrinho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_finalizar_carrinho"
                android:backgroundTint="@color/blue"
                android:onClick="onClickFinalizar"
                android:layout_gravity="right"
                android:clickable="true"
                android:visibility="visible"
                android:focusable="false"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layoutContent" />

    </RelativeLayout>

</ScrollView>
