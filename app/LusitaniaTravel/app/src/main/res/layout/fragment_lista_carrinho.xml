<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaCarrinhoFragment">

    <ListView
        android:id="@+id/lvcarrinho"
        android:layout_width="match_parent"
        android:layout_height="600dp" />

    <Button
        android:id="@+id/btnFinalizarCarrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lvcarrinho"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/blue"
        android:clickable="true"
        android:focusable="false"
        android:onClick="onClickFinalizar"
        android:text="@string/txt_finalizar_carrinho"
        android:visibility="visible" />

</RelativeLayout>




